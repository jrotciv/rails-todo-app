<h1 class="text-center my-4"><%= @list.name %></h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <p class="card-text text-muted">Criada em: <%= @list.created_at.strftime("%B %d, %Y") %></p>
          
          <h3 class="mt-4">Tarefas:</h3>
          <p class="text-center">Nenhuma tarefa foi adicionada ainda.</p>

          <div class="mt-4 text-center">
            <%= link_to 'Voltar', '#', class: 'btn btn-secondary' %>
            <%= link_to 'Editar', '#', class: 'btn btn-primary ml-2' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
