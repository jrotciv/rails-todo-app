<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row w-100">
    <div class="col-md-4 offset-md-4 col-12">
      <div class="text-center mb-4">
        <h1>Entrar</h1>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_for :session, url: login_path, method: :post do |f| %>

            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, placeholder: 'Email', class: 'form-control form-control-lg' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, placeholder: 'Senha', class: 'form-control form-control-lg' %>
            </div>

            <%= f.submit 'Entrar', class: 'btn btn-primary btn-lg w-100' %>

          <% end %>
        </div>
      </div>

      <div class="text-center mt-3">
        <p class="text-muted">NÃ£o tem uma conta? <%= link_to 'Cadastre-se', new_user_path %></p>
      </div>
    </div>
  </div>
</div>
